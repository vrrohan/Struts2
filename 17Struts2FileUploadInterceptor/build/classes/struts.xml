<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" 
	"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="default" extends="struts-default">
		<interceptors>
			<interceptor name="nameToUpper"
				class="com.ron.custom.interceptor.UsernameToUppercase"></interceptor>
		</interceptors>
		<action name="index">
			<result>/index.jsp</result>
		</action>
		<action name="register"
			class="com.ron.message.action.PersonAction">
			<interceptor-ref name="params"></interceptor-ref>
			<interceptor-ref name="nameToUpper"></interceptor-ref>
			<interceptor-ref name="execAndWait"></interceptor-ref>
			<result name="success">/thankyou.jsp</result>
			<result name="input">/register.jsp</result>
			<result name="failure">/error.jsp</result>
			<result name="wait">/wait.jsp</result>
		</action>
		<action name="uploadAction"
			class="com.ron.message.action.FileUploadAction">
			<interceptor-ref name="exception"></interceptor-ref>
			<interceptor-ref name="fileUpload">
				<param name="allowedTypes">text/plain</param>
				<param name="maximumSize">6000000</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<result name="success">/thankyou.jsp</result>
			<result name="failure">/error.jsp</result>
		</action>
	</package>

</struts>